@model IEnumerable<SkalEF.Models.Client>

@{
    ViewData["Title"] = "HeadCount";
    var secOne = Model.Where(c => c.Section == "Avdelning 1");
    var secTwo = Model.Where(c => c.Section == "Avdelning 2");

}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
$(document).ready(function(){
  $("#Sec1").click(function(){
      $("#S1").show();
      $("#S2").hide();
  });
  $("#Sec2").click(function(){
      $("#S2").show();
      $("#S1").hide();
  });
});
</script>
<h1></h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-3"><button type="button" class="btn btn-light" id="Sec1"> Avdelning 1 </button> </div>
        <div class="col-3"><button type="button" class="btn btn-light" id="Sec2"> Avdelning 2 </button>  </div>
    </div>
    <br />
</div>
<div class="container">
    <div class="row" id="S1">
        @foreach (var item in secOne)
        {

        <div class="border col-3 ">
            <div class="row">
                <div class="col-6">
                    <img src="@("~/img/"+item.ImgName)" asp-append-version="true" style="width:120px; height:auto" />
                </div>
                <div class="col-6">
                    <h3 class="border-bottom">@Html.DisplayFor(modelItem => item.Room)</h3>
                    <div class="col-6">
                        <b class="border-bottom">@Html.DisplayNameFor(item => item.LasName)</b>
                        @Html.DisplayFor(modelItem => item.LasName)

                    </div>
                    <div class="col-6">
                        <b class="border-bottom border-top">@Html.DisplayNameFor(item => item.FirNamn)</b>
                        @Html.DisplayFor(modelItem => item.FirNamn)
                    </div>
                </div>
            </div>
            <div>
                <table class="table table-bordered" style="width:220px;">
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        }

    </div>

    <div class="row" id="S2">
        @foreach (var item in secTwo)
        {

            <div class="border col-3 ">
               
                <div class="row">
                    <div class="col-6">
                        <img src="@("~/img/"+item.ImgName)" asp-append-version="true" style="width:120px; height:auto" />
                    </div> 
                    <div class="col-6">
                        <h3 class="border-bottom">@Html.DisplayFor(modelItem => item.Room)</h3>
                        <div class="col-6">
                            <b class="border-bottom">@Html.DisplayNameFor(item => item.LasName)</b>
                            @Html.DisplayFor(modelItem => item.LasName)

                        </div>
                        <div class="col-6">
                            <b class="border-bottom border-top">@Html.DisplayNameFor(item => item.FirNamn)</b>
                                @Html.DisplayFor(modelItem => item.FirNamn)
                        </div>
                    </div>
                </div>
               
                <div>
                    <table class="table table-bordered" style="width:220px;">
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        }

    </div>


</div>


       
